      	<h2>User info</h2>
  <%= form_for(@user) do |f| %>
  <div class="field">
    <label>Name</label>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image, class: "user-edit-form" %>
  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
  <% end %>
